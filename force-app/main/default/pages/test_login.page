<apex:page controller="LoginTest">
    <apex:form>
        <apex:pageBlock>
            <apex:pageBlockSection id="contact-table" columns="1">
                <apex:pageBlockSectionItem>
                    <apex:outputLabel value="User Name" />
                    <apex:inputText value="{!u_name}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem>
                    <apex:outputLabel value="Password" />
                    <apex:inputText value="{!pass}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem>
                    <apex:outputText value="{!testdata}" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem>
                    <apex:commandButton action="{!LoginTest}" value="Login" />
                    <br/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>